# Example environment variables for Backend API
# Copy this file to .env and update values as needed.
# REQUIRED: DATABASE_URL, JWT_SECRET, REFRESH_TOKEN_SECRET

# ===============================
# üåê SERVER CONFIGURATION
# ===============================
NODE_ENV=development
PORT=3000
# If omitted, BASE_URL will default to http://localhost:${PORT}
BASE_URL=http://localhost:3000

# ===============================
# üóÑÔ∏è DATABASE (Prisma / MySQL)
# ===============================
# Format: mysql://USER:PASSWORD@HOST:PORT/DB_NAME
DATABASE_URL=mysql://root:password@localhost:3306/my_database

# ===============================
# üß† REDIS CONFIG
# ===============================
REDIS_URL=redis://localhost:6379

# ===============================
# üìß SMTP / EMAIL CONFIG (optional)
# ===============================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Backend API <noreply@example.com>"

# ===============================
# üîê AUTH (JWT)
# ===============================
# Use strong, secret values in production
JWT_SECRET=please_change_me
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=please_change_me_too
REFRESH_TOKEN_EXPIRES_IN=30d

# ===============================
# üïí CRON JOBS (optional)
# ===============================
CRON_TIME_NOTIFY=0 * * * *
ENABLE_CRON=false

# ===============================
# üß∞ LOGGING
# ===============================
LOG_LEVEL=debug
LOG_TO_FILE=false

# ===============================
# üíå META
# ===============================
APP_NAME=Backend API
APP_OWNER=Orang Sigma
